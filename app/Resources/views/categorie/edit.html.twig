{% extends '@admintmp/Default/index.html.twig' %}
{% block body %}
    {{ form_start(edit_form) }}
    <h2 class="form-title">Modifier Categorie</h2>
    <div class="card-body">
        <div class="form-group">
            <label for="exampleInputEmail1">Nom Categorie</label>
            <div>
                {{ form_widget(edit_form.nomCategorie, { 'attr': {'class': 'form-control', 'placeholder': 'Nom Categorie','type':'text','name':'name','id':'nom_cat' } }) }}                    </div>

        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Description</label>
            <div>
                {{ form_widget(edit_form.description, { 'attr': {'class': 'form-control', 'placeholder': 'Description','type':'text','name':'name','id':'desc' } }) }}                    </div>

        </div>


    </div>
    <div><ul>
        <li>
        <button href="{{ path('categorie_index') }}" type="submit" class="btn btn-primary">Edit  </button>
        </li>
        </ul>
    </div>
    {{ form_end(edit_form) }}

    <ul>
        <li>
            {{ form_start(delete_form) }}


            <button type="submit" class="btn btn-primary">Delete</button>
            {{ form_end(delete_form) }}
        </li>
        <li>
            <h4>
                <a href="{{ path('categorie_index') }}" class="-address-book">Back to the list</a>
            </h4>
        </li>

    </ul>

{% endblock %}

