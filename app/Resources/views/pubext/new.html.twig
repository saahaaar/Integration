{% extends '@admintmp/Default/index.html.twig' %}

{% block body %}
    <form role="form" action="{{ path('pubext_new') }}" method="post">
        <h2 class="form-title">Ajout des pubs payantes</h2>
        <div class="card-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Nom Pub</label>
                <div>
                    {{ form_widget(form.nompubext, { 'attr': {'class': 'form-control', 'placeholder': 'Nom Categorie','type':'text','name':'name','id':'nom_cat' } }) }}                    </div>

            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">date debut</label>
                <div>
                    {{ form_widget(form.datedebutpubext, { 'attr': {'class': 'form-control', 'placeholder': 'Description','type':'text','name':'name','id':'desc' } }) }}                    </div>

            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">date exp</label>
                <div>
                    {{ form_widget(form.dateexppubext, { 'attr': {'class': 'form-control', 'placeholder': 'Description','type':'text','name':'name','id':'desc' } }) }}                    </div>

            </div>


        </div>
        <!-- /.card-body -->
        {{ form_rest(form) }}
        <div class="card-footer">
            <ul>
                <button type="submit" class="btn btn-primary">Create</button>
            </ul>
            <ul>
                <li><h4>
                        <a href="{{ path('pubext_index') }}" class="-address-book">Back to the list</a>
                    </h4>
                </li>
            </ul>
        </div>
    </form>
{% endblock %}
