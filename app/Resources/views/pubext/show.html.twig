{% extends '@admintmp/Default/index.html.twig' %}

{% block body %}
    <h1>Publicit√©s Payantes</h1>



    <table class="table table-dark">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nom</th>
            <th scope="col">Date debut pub</th>
            <th scope="col">Date exp pub</th>
            <th scope="col">Symbol</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th scope="row">1</th>
            <td>{{ pubext.nompubext }}</td>
            <td>{% if pubext.datedebutpubext %}{{ pubext.datedebutpubext|date('Y-m-d') }}{% endif %}</td>
            <td>{% if pubext.dateexppubext %}{{ pubext.dateexppubext|date('Y-m-d') }}{% endif %}</td>
            <td><img src=" {{ pubext.displayPhoto }} " class="card-img-top" alt="Deal's photo"></td>


        </tr>

        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pubext_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pubext_edit', { 'id': pubext.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

